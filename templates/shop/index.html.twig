{% extends 'base.html.twig' %}

{% block title %}Машины{% endblock %}

{% block body %}
    <h1>Cars</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CreatedAt</th>
                <th>Color</th>
                <th>Car</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d') : '' }}</td>
                <td>{{ product.color }}</td>
                <td>{{ product.car }}</td>
                <td>{{ product.price }}</td>
                <td>
                    <a href="{{ path('app_additem', {'id': product.id}) }}">добавить</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_basket') }}">Корзина</a>
{% endblock %}
